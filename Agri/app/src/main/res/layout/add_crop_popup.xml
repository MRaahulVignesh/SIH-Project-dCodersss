<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chooseLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/add_crop"
        android:layout_margin="8dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

    <EditText
        android:drawableStart="@drawable/ic_local_florist_black_24dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:id="@+id/cropname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/crop_name"
        android:inputType="text" />

    <EditText
        android:drawableStart="@drawable/ic_equalizer_black_24dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:id="@+id/totalQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/total_quantity"
        android:importantForAutofill="no"
        android:inputType="numberDecimal" />

    <EditText
        android:drawableStart="@drawable/ic_account_balance_wallet_black_24dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:id="@+id/unitPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/unit_price"
        android:importantForAutofill="no"
        android:inputType="numberDecimal" />

    <!-->TODO: Add crop organic or not and delivered optical effects <!-->

    <EditText
        android:drawableStart="@drawable/ic_today_black_24dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:id="@+id/expectedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/date"
        android:inputType="date" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add" />

</LinearLayout>